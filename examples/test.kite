-- recursion
fib = (Int n) -> Int {
    return
       if n == 0 then 0
       else if n == 1 then 1
       else fib (n - 1) + fib (n - 2)
}

fib (5)

-- nested recursion
fib = (Int n) -> Int {
    foo = (Int p) -> Int {
        return if p > 0
           then foo (2)
           else fib (2)
    }

    return foo (n - 1)
}

